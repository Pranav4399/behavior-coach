# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=behavior_coach
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=your_pgadmin_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration
API_PREFIX=/api/v1

# Security
BCRYPT_SALT_ROUNDS=10

# LocalStack settings (for development)
LOCALSTACK_ENDPOINT="http://localstack:4566"
LOCAL_S3_BUCKET_NAME="local-test-bucket"

# AWS settings (for production)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"  # Only needed in production
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"  # Only needed in production
AWS_S3_BUCKET_NAME="your-production-bucket-name"

# Instructions:
# 1. Copy this file to .env
# 2. Replace the values with your actual configuration
# 3. Never commit the actual .env file to version control 
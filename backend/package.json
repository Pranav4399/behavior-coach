  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:docs": "tsx scripts/generate-db-docs.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate",
    "dev:nodemon": "nodemon --exec 'tsx' server.ts --ext ts,js,json",
    "localstack:setup": "bash scripts/setup-localstack.sh",
    "localstack:start": "docker-compose up -d localstack",
    "localstack:stop": "docker-compose stop localstack",
    "localstack:logs": "docker-compose logs -f localstack"
  },
